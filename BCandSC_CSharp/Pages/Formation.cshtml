@page
@model BCandSC_CSharp.Pages.FormationModel
@{

    <head>
        <!-- Einbindung Bootstrap core und CSS. Damit lassen sich die Styles von Bootstrap nutzten -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/main.css">

    </head>
    <style>

        .field-formation {
            border: 1px solid white;
            font-family: 'Montserrat', sans-serif;
            font-size: 25px;
            font-weight: 500;
            max-width: 100%;
            text-align: center;
            background-color: #262626;
            margin: 5px;
            color: white;
        }

        img, picture, svg {
            max-width: 95%;
            display: block;
            border-radius: 5px;
        }

        p {
            margin-top: 75px;
            margin-bottom: 1rem;
        }

        a {
            color: #fff;
            text-decoration: none;
            background-color: transparent;
            -webkit-text-decoration-skip: objects;
        }

            a:hover {
                color: #3f8015;
                text-decoration: auto;
            }

        html body div.container main.pb-3 form div div div.field-formation button.field-formation {
            border: black;
        }

    </style>

    ViewData["Title"] = "Formation";

    <body>
        <nav class="navbar navbar-dark bg-dark">

            <a class="navbar-brand" href="#">TEAMBET</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="#">Features</a>
                    <a class="nav-item nav-link" href="#">Pricing</a>
                    <a class="nav-item nav-link disabled" href="#">Disabled</a>
                </div>
            </div>
        </nav>


        <p>
            Bitte wählen Sie Ihre Wunschformation aus.<br><br>
            Achtung! Die Wahl kann im nachhinein nicht mehr geändert werden!

        </p>

        <form method="post">
            <div style="display: flex;">
                <div>
                    <img src="~/img/352.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="352" asp-route-userId="@Model.userId">3-5-2</button></div>
                </div>
                <div>
                    <img src="~/img/343.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="343" asp-route-userId="@Model.userId">3-4-3</button></div>
                </div>
                <div>
                    <img src="~/img/451.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="451" asp-route-userId="@Model.userId">4-5-1</button></div>
                </div>

                <div>
                    <img src="~/img/433.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="433" asp-route-userId="@Model.userId">4-3-3</button></div>
                </div>
                <div>
                    <img src="~/img/442.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="442" asp-route-userId="@Model.userId">4-4-2</button></div>
                </div>
                <div>
                    <img src="~/img/532.png" alt="" style="margin:5px">
                    <div class="field-formation"><button class="field-formation" asp-route-formation="532" asp-route-userId="@Model.userId">5-3-2</button></div>
                </div>
            </div>
        </form>






        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    </body>
}