@page
@model BCandSC_CSharp.Pages.MatchdayModel
@{

    <head>
        <!-- Einbindung Bootstrap core und CSS. Damit lassen sich die Styles von Bootstrap nutzten -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/main.css">

    </head>


    <style>




        .card {
            position: relative;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 3px solid rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            width: 100%;
            height: 100%;
            background-color: #030303;
            margin: auto;
        }

        .card-title {
            margin-bottom: .75rem;
            text-align: center;
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            font-weight: 350;
            padding-top: 20px;
        }

        .card-body {
            flex: 1 1 auto;
            padding: 0;
            color: white;
            background: url(img/StationMatchday.jpg) no-repeat center center/cover;
            border-radius: 10px;
            border-color: white;
            height: 185px;
            margin: auto;
            width: 100%;
        }

        .card-body1 {
            flex: 1 1 auto;
            padding: 0rem;
            color: white;
            background: url(img/pitchgoal.jpg) no-repeat center center/cover;
            border-radius: 10px;
            border-color: white;
            border: 2px solid #fff;
            height: 185px;
        }

        .carousel-item {
            position: relative;
            display: none;
            float: left;
            width: 100%;
            margin-right: -100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
            transition: transform .6s ease-in-out;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 20px;
        }

        .carousel-inner {
            position: relative;
            width: 100%;
            overflow: hidden;
            border-radius: 20px;
        }

        img, picture, svg {
            max-width: 100%;
            display: block;
            border: 3px solid rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            padding: 3px;
        }

        .btn-primary {
            border-color: #fff;
            color: #fff;
            background-color: #343a40;
            width: 100%;
            height: 100%;
        }

            .btn-primary:hover {
                color: #3f8015;
                background-color: #fff;
                border-color: #000;
            }


        .container1 {
            color: #333;
            margin: 0 auto;
            text-align: center;
            padding: 10px;
        }

        h3 {
            color: white;
            font-weight: normal;
            letter-spacing: 0.125rem;
            text-transform: uppercase;
            padding: 10px;
        }

        li {
            display: inline-block;
            font-size: 1.5em;
            list-style-type: none;
            padding: 1em;
            text-transform: uppercase;
        }

            li span {
                display: block;
                font-size: 4.5rem;
            }

        .message {
            font-size: 4rem;
        }

        #content {
            display: none;
            padding: 1rem;
        }

        .emoji {
            padding: 0 0.25rem;
        }

        li {
            font-size: 1.125rem;
            padding: 0.75rem;
            color: white;
        }

            li span {
                font-size: 3.375rem;
            }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-right: -15px;
            margin-left: -15px;
            margin-bottom: -40px;
        }

        .row1 {
            display: flex;
            flex-wrap: wrap;
            margin-right: -5px;
            margin-left: -5px;
            margin-top: 50px;
        }

        .form-group-statics {
            text-align: center;
            max-width: 100%;
            max-height: 100%;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .personal {
            border: 1px solid rgb(255, 255, 255);
            border-radius: 10px;
            margin: 10px;
            margin-top: 25px;
            height: 87%;
            background-color: #343a40;
        }

        p {
            margin-top: 20px;
            margin-bottom: 1rem;
            padding: 0px;
            text-align: center;
        }

        label[for="PlayerName"] {
            font-size: 17px;
            display: flex;
            align-items: center;
            background-color: #00000091;
            justify-content: flex-start;
            color: white;
            margin: 0px;
            height: 118%;
            padding-left: 20px;
        }


        label[for="totalpoints"] {
            color: #fff;
            max-width: 100%;
            width: 40%;
            font-size: 20px;
            border-radius: 5px;
        }

        label[for="ergebnis"] {
            color: #fff;
            max-width: 100%;
            width: 100%;
            background-color: #a69f3775;
            font-size: 14px;
        }

        label[for="Profilsets"] {
            color: #fff;
            font-size: 15px;
            justify-content: flex-start;
            display: flex;
            text-align: justify;
            padding-left: 20px;
            margin-bottom: -5px;
        }


        .form-group {
            margin-bottom: 0rem;
            text-align: center;
        }

    </style>

    ViewData["Title"] = "Willkommen zu Spieltag " + Model.Matchday;

    <body>
        <nav class="navbar navbar-dark bg-dark">


            <a class="navbar-brand" href="#">TEAMBET</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="#">Features</a>
                    <a class="nav-item nav-link" href="#">Pricing</a>
                    <a class="nav-item nav-link disabled" href="#">Disabled</a>
                </div>
            </div>
        </nav>




        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-8">
                    <div class="container1">
                        <h3 id="headline">Der nächste Spieltag beginnt in:</h3>
                        <div id="countdown">
                            <ul>
                                <li><span id="days"></span>days</li>
                                <li><span id="hours"></span>Hours</li>
                                <li><span id="minutes"></span>Minutes</li>
                                <li><span id="seconds"></span>Seconds</li>
                            </ul>
                        </div>

                        <form method="post">
                            <div class="form-group-SPieltag">
                                <input type="submit" value="Spieltag starten" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
                <div class="col-sm-4">


                    <div class="personal">
                        <p>
                            <label for="Profilsets">Username: @Model.user.Name </label><br>
                            <label for="Profilsets">ETH: @Model.AccountBalanceETH </label><br>
                            <label for="Profilsets">EUR: @Model.AccountBalanceEUR </label><br>
                            <label for="Profilsets">USD: @Model.AccountBalanceUSD</label><br>
                            <label for="Profilsets">Spieltag: @Enviroment.GetEnviroment().Matchday</label><br>
                        </p>
                    </div>
                </div>
            </div>
        </div>









        <div class="row1">


            <div class="col-sm-4" style="display: grid; align-items: center;">
                <form method="post">
                    <div class="form-group-statics">
                        <img src="~/img/Bundesliga_Spieltag.jpg">
                    </div>
                </form>
            </div>


            <div class="col-sm-4">
                <div class="card">

                    <div class="card-body">
                        @{
                            foreach (Team t in Model.teams)
                            {

                                <h5 class="card-title">@t.Name</h5>
                                <div class="form-group">
                                    <label for="totalpoints">Punkte: @t.TotalPoints</label>
                                </div>
                                <div class="form-group">
                                    <label for="ergebnis">Ergebnis: -10000€</label>
                                </div>
                                <div class="form-group">
                                    @{
                                        foreach (Player p in t.Players)
                                        {
                                            <label for="PlayerName">@p.Name   (@p.Punkte)</label>

                                            <br>
                                        }
                                    }
                                </div>

                            }
                        }
                    </div>
                </div>
            </div>

            <div class="col-sm-4" style="display: grid; align-items: center;">
                <form method="post">
                    <div class="form-group-statics">
                        <img src="~/img/Tabelle.jpg">
                    </div>
                </form>
            </div>

        </div>


        <p>
            Powered by BCSC Group 1
        </p>





        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


        <script>
            (function () {
                const second = 1000,
                    minute = second * 60,
                    hour = minute * 60,
                    day = hour * 24;

                let birthday = "Feb 9, 2023 08:0:00",
                    countDown = new Date(birthday).getTime(),
                    x = setInterval(function () {
                        let now = new Date().getTime(),
                            distance = countDown - now;

                        (document.getElementById("days").innerText = Math.floor(distance / day)),
                            (document.getElementById("hours").innerText = Math.floor(
                                (distance % day) / hour
                            )),
                            (document.getElementById("minutes").innerText = Math.floor(
                                (distance % hour) / minute
                            )),
                            (document.getElementById("seconds").innerText = Math.floor(
                                (distance % minute) / second
                            ));

                    }, 0);
            })();
        </script>
    </body>

}
