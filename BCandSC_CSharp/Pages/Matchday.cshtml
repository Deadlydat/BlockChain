        label {
            text-align: center;
            font-weight: 250;
        }

        .card {
            position: relative;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid rgba(0,0,0,.125);
            border-radius: 10px;
            background-color: #030303;
            margin-top: 10px;
        }

        .card-title {
            margin-bottom: .75rem;
            text-align: center;
            font-family: 'Montserrat', sans-serif;
            font-size: 20px;
            font-weight: 350;
        }

        .card-body {
            flex: 1 1 auto;
            padding: 1.25rem;
            color: white;
            background: url(img/Multimode.jpg) no-repeat center center/cover;
            border-radius: 10px;
            border-color: white;
            border: 2px solid #fff;
            height: 185px;
        }

        .card-body1 {
            flex: 1 1 auto;
            padding: 1.25rem;
            color: white;
            background: url(img/pitchgoal.jpg) no-repeat center center/cover;
            border-radius: 10px;
            border-color: white;
            border: 2px solid #fff;
            height: 185px;
        }

        .carousel-item {
            position: relative;
            display: none;
            float: left;
            width: 100%;
            margin-right: -100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
            transition: transform .6s ease-in-out;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 20px;
        }

        .carousel-inner {
            position: relative;
            width: 100%;
            overflow: hidden;
            border-radius: 20px;
        }

        img, picture, svg {
            max-width: 100%;
            display: block;
            border-radius: 25px;
        }

        .btn-primary {
            border-color: #fff;
            color: #fff;
            background-color: #343a40;
            width: 100%;
            height: 100%;
        }

            .btn-primary:hover {
                color: #3f8015;
                background-color: #fff;
                border-color: #000;
            }

        /*   .modeOneOne {
